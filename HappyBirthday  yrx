    <!-- 吹蜡烛音效 -->
    <audio id="blowSound">
        <source src="https://assets.mixkit.co/sfx/preview/mixkit-wind-puff-1189.mp3" type="audio/mpeg">
        您的浏览器不支持音频元素。
    </audio>
    
    <!-- 气球飞走音效 -->
    <audio id="flySound">
        <source src="https://assets.mixkit.co/sfx/preview/mixkit-magical-wooden-chimes-3126.mp3" type="audio/mpeg">
        您的浏览器不支持音频元素。
    </audio>
    
    <script>
        // 创建飘落的心形
        function createHearts() {
            const heartsContainer = document.getElementById('hearts');
            const heartCount = 40;
            
            for (let i = 0; i < heartCount; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = '❤';
                heart.classList.add('heart');
                
                // 随机位置
                heart.style.left = `${Math.random() * 100}%`;
                
                // 随机动画延迟和持续时间
                const delay = Math.random() * 5;
                const duration = 5 + Math.random() * 10;
                
                heart.style.animationDelay = `${delay}s`;
                heart.style.animationDuration = `${duration}s`;
                
                heartsContainer.appendChild(heart);
            }
        }
        
        // 显示状态消息
        function showStatus(message) {
            const statusNotice = document.getElementById('statusNotice');
            statusNotice.textContent = message;
            statusNotice.style.display = 'block';
            statusNotice.style.backgroundColor = '#2ecc71';
            
            // 清除现有动画类并重新添加以触发动画
            statusNotice.classList.remove('status-notice');
            void statusNotice.offsetWidth; // 触发重绘
            statusNotice.classList.add('status-notice');
        }
        
        // 打开贺卡
        const birthdayCard = document.getElementById('birthdayCard');
        birthdayCard.addEventListener('click', function() {
            if (!this.classList.contains('open')) {
                this.classList.add('open');
                showStatus("贺卡已打开！");
            }
        });
        
        // 吹蜡烛
        const flame = document.getElementById('flame');
        const smoke = document.getElementById('smoke');
        const blowSound = document.getElementById('blowSound');
        let isCandleLit = true;
        
        if(flame) {
            flame.addEventListener('click', function() {
                if (isCandleLit) {
                    this.classList.add('out');
                    smoke.classList.add('animate');
                    
                    try {
                        blowSound.play();
                    } catch (e) {
                        console.log("播放音效失败:", e);
                    }
                    
                    setTimeout(() => {
                        smoke.classList.remove('animate');
                    }, 2000);
                    
                    isCandleLit = false;
                    showStatus("蜡烛吹灭啦！");
                }
            });
        }
        
        // 双击蛋糕重新点燃蜡烛
        const cake = document.getElementById('cake');
        if(cake) {
            cake.addEventListener('dblclick', function() {
                if (!isCandleLit) {
                    flame.classList.remove('out');
                    isCandleLit = true;
                    showStatus("蜡烛重新点燃！");
                }
            });
        }
        
        // 放飞气球
        const balloon1 = document.getElementById('balloon1');
        const balloon2 = document.getElementById('balloon2');
        const balloon3 = document.getElementById('balloon3');
        const flySound = document.getElementById('flySound');
        
        function flyBalloon(balloon, id) {
            if(!balloon) return;
            
            // 设置随机的X轴偏移
            balloon.style.setProperty('--x-offset', Math.random());
            balloon.classList.add('flying');
            
            try {
                flySound.play();
            } catch (e) {
                console.log("播放音效失败:", e);
            }
            
            setTimeout(() => {
                balloon.remove();
                showStatus(`气球${id}飞走了！`);
            }, 2000);
        }
        
        if(balloon1) balloon1.addEventListener('click', () => flyBalloon(balloon1, 1));
        if(balloon2) balloon2.addEventListener('click', () => flyBalloon(balloon2, 2));
        if(balloon3) balloon3.addEventListener('click', () => flyBalloon(balloon3, 3));
        
        // 双击内页关闭贺卡
        const inside = document.querySelector('.inside');
        if(inside) {
            inside.addEventListener('dblclick', function(e) {
                if (e.target === this || e.target.classList.contains('message')) {
                    birthdayCard.classList.remove('open');
                    showStatus("贺卡已关闭");
                }
            });
        }
        
        // 页面加载时初始化
        window.addEventListener('DOMContentLoaded', () => {
            createHearts();
            showStatus("生日贺卡加载完成！");
            
            // 初始化音频（预加载）
            try {
                blowSound.load();
                flySound.load();
            } catch (e) {
                console.log("音频预加载失败:", e);
            }
            
            // 添加视觉引导动画
            const hint = document.querySelector('.front .hint');
            if(hint) {
                hint.classList.add('pulse');
            }
        });
    </script>
</body>
</html>
